<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>parts</portlet-name>
		<display-name>Parts</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <window-state>maximized</window-state>
            <window-state>minimized</window-state>
            <window-state>normal</window-state>
		</supports>
        <resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Parts Spring</title>
			<short-title>Parts Spring</short-title>
			<keywords>Parts Spring</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
	<portlet>
		<portlet-name>manufacturer</portlet-name>
		<display-name>Manufacturers</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <window-state>maximized</window-state>
            <window-state>minimized</window-state>
            <window-state>normal</window-state>
		</supports>
        <resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Manufacturer Spring Portlet</title>
			<short-title>Manufacturer Spring</short-title>
			<keywords>Manufacturer Spring</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>